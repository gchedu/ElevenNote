@functions {
    string FizzBuzz(int i) {
        if (i % 15 == 0) { return "FizzBuzz"; }
        else if (i % 5 == 0) {return "Fizz"; }
        else if  (i % 3 == 0) {return "Buzz"; }
        else { return i.ToString(); }
    }

}

<h1>
    Teh Fizz Buzz is fun!
</h1>
<select name="FizzBuzz">
    @for (var i = 1; i <= 100; i++)
    {
        <option value="@i">@FizzBuzz(i)</option>
    }
</select>